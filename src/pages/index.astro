<script>
  function normalizeNewlines(text: string): string {
    // Collapse 2+ consecutive newlines to 1, then cap at 6 total
    let normalized = text.replace(/\n{2,}/g, '\n');
    const lines = normalized.split('\n');
    if (lines.length > 7) {
      normalized = lines.slice(0, 7).join('\n');
    }
    return normalized;
  }

  function initPage() {
    const form = document.getElementById('message-form') as HTMLFormElement;
    const status = document.getElementById('status')!;

    const formPage = document.getElementById('form-page')!;
    const messagePage = document.getElementById('message-page')!;
    const pageIndicator = document.getElementById('page-indicator')!;
    const paperPageInfo = document.getElementById('paper-page-info')!;
    const sheetCount = document.querySelector('.sheet-count')!;
    
    const navFirst = document.getElementById('nav-first')!;
    const navPrev = document.getElementById('nav-prev')!;
    const navNext = document.getElementById('nav-next')!;
    const navLast = document.getElementById('nav-last')!;
    
    const messagesContainer = document.getElementById('messages-container')!;

    let messages: any[] = [];
    let currentPage = 0;
    let totalPages = 1;

  async function fetchMessages() {
    try {
      const res = await fetch('/api/messages');
      if (res.ok) {
        messages = await res.json();
        totalPages = 1 + messages.length;
        updateNav();
        updateSheetCount();
        if (currentPage > 0) showPage(currentPage);
      }
    } catch (e) {
      console.error('Failed to fetch messages:', e);
    }
  }

  function updateSheetCount() {
    sheetCount.textContent = `${totalPages} sheet${totalPages === 1 ? '' : 's'} of paper`;
  }

  function updateNav() {
    const displayPage = currentPage + 1;
    pageIndicator.textContent = `${displayPage} of ${totalPages}`;
    paperPageInfo.textContent = `${displayPage} of ${totalPages}`;
    
    navFirst.toggleAttribute('disabled', currentPage === 0);
    navPrev.toggleAttribute('disabled', currentPage === 0);
    navNext.toggleAttribute('disabled', currentPage >= totalPages - 1);
    navLast.toggleAttribute('disabled', currentPage >= totalPages - 1);
  }

  function escapeHtml(text: string) {
    const div = document.createElement('div');
    div.textContent = text;
    return div.innerHTML;
  }

  function showPage(page: number) {
    currentPage = Math.max(0, Math.min(page, totalPages - 1));
    
    if (currentPage === 0) {
      formPage.style.display = 'block';
      messagePage.style.display = 'none';
    } else {
      const msg = messages[currentPage - 1];
      formPage.style.display = 'none';
      messagePage.style.display = 'block';
      
      messagesContainer.innerHTML = `
        <div class="message-card">
          <div class="message-header">
            <span class="message-from">${escapeHtml(msg.name || 'Anonymous')}</span>
            <span class="message-date">${new Date(msg.created_at).toLocaleDateString()}</span>
          </div>
          <hr class="message-divider" />
          <div class="message-text">${escapeHtml(msg.message)}</div>
        </div>
      `;
    }
    
    updateNav();
  }

  navFirst.addEventListener('click', () => showPage(0));
  navPrev.addEventListener('click', () => showPage(currentPage - 1));
  navNext.addEventListener('click', () => showPage(currentPage + 1));
  navLast.addEventListener('click', () => showPage(totalPages - 1));

  // Initialize
  fetchMessages();

  form.addEventListener('submit', async (e) => {
    e.preventDefault();
    const formData = new FormData(form);
    const message = (formData.get('message') as string)?.trim();

    if (!message) {
      status.textContent = 'Please write a message first';
      status.className = 'error';
      setTimeout(() => { status.textContent = ''; status.className = ''; }, 3000);
      return;
    }

    const res = await fetch('/api/messages', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({
        name: formData.get('name'),
        message: normalizeNewlines(message),
      }),
    });

    if (res.ok) {
      status.textContent = 'Message sent to printer queue!';
      status.className = 'success';
      form.reset();
      updateCharCount();
      fetchMessages();
    } else if (res.status === 429) {
      status.textContent = 'Please wait 5 minutes between messages';
      status.className = 'error';
    } else {
      status.textContent = 'Something went wrong, please try again';
      status.className = 'error';
    }
    setTimeout(() => { status.textContent = ''; status.className = ''; }, 4000);
  });

  document.querySelector('.btn-cancel')!.addEventListener('click', () => {
    form.reset();
  });

  const paper = document.querySelector('.paper') as HTMLElement;
  const paperSizeSelect = document.getElementById('paper-size-select') as unknown as HTMLSelectElement;

  paperSizeSelect.addEventListener('change', () => {
    paper.classList.toggle('letter', paperSizeSelect.value === 'letter');
  });

  const textarea = document.getElementById('message') as HTMLTextAreaElement;
  const charCurrent = document.getElementById('char-current')!;

  function updateCharCount() {
    charCurrent.textContent = textarea.value.length.toString();
  }

  textarea.addEventListener('input', updateCharCount);
  updateCharCount();
  }

  // Run on initial load and after View Transitions navigation
  initPage();
  document.addEventListener('astro:after-swap', initPage);
</script>