---
import Layout from "../layouts/Layout.astro";
---

<Layout title="print/home">
  <div class="preview-area">
    <div class="paper" transition:name="paper">
      <div class="paper-header">
        <span class="paper-title">Messages</span>
        <span class="paper-url">print.lukasreis.com</span>
      </div>
      
      <div class="paper-content" id="paper-content">
        <div id="form-page">
          <h1>Print a message</h1>
          <p class="intro">Hey I'm Lukas! Want to leave a message? Write anything below and it will auto print on my home printer!</p>
          
          <form id="message-form">
            <label for="name">Name</label>
            <input type="text" id="name" name="name" placeholder="Anonymous" maxlength="55"/>
            
            <div class="message-header">
              <label for="message">Message</label>
              <span class="char-count"><span id="char-current">0</span>/250</span>
            </div>
            <textarea 
              id="message" 
              name="message" 
              placeholder="Type your message here"
              rows="5"
              maxlength="250"
            ></textarea>
          </form>
          <div id="status"></div>
        </div>
        
        <div id="message-page" style="display: none;">
          <div id="messages-container" class="messages-container"></div>
        </div>
      </div>
      
      <div class="paper-footer">
        <span class="page-info" id="paper-page-info">1 of 1</span>
      </div>
    </div>
    
    <div class="page-nav">
      <button class="nav-btn" id="nav-first">«</button>
      <button class="nav-btn" id="nav-prev">‹</button>
      <span class="page-indicator" id="page-indicator">1 of 1</span>
      <button class="nav-btn" id="nav-next">›</button>
      <button class="nav-btn" id="nav-last">»</button>
    </div>
  </div>
  
  <div class="sidebar" transition:animate="fade">
    <div class="sidebar-header">
      <h2>Print</h2>
      <span class="sheet-count">1 sheet of paper</span>
    </div>
    
    <div class="setting-group">
      <label class="setting-label">Destination</label>
      <div class="destination">
        <span>Brother_DCP-7030</span>
      </div>
    </div>
    
    <div class="setting-group">
      <label class="setting-label">Paper size</label>
      <select id="paper-size-select" class="native-select">
        <option value="a4" selected>A4</option>
        <option value="letter">Letter</option>
      </select>
    </div>
    
    <a href="/about" class="system-dialog-link">How this works <span class="external-icon">?</span></a>

    <a href="https://lukasreis.com" class="system-dialog-link">
      Visit lukasreis.com
      <span class="external-icon">↗</span>
    </a>
    
    <div class="sidebar-bottom">
      <p class="made-by">Made by Lukas with &lt;3</p>
      <div class="sidebar-footer">
        <button class="btn-cancel">Cancel</button>
        <button class="btn-save" type="submit" form="message-form">Send</button>
      </div>
    </div>
  </div>
</Layout>

